<Dialog xmlns="sap.m"
xmlns:l="sap.ui.layout"
title="BestellbestÃ¤tigung"
id ="orderDialog"
contentWidth= "350px">
    <content>
        <l:HorizontalLayout id="dialogHLayout">
            <l:content>
                <ObjectHeader
                title="{model>/Number} x {model>/Name}"
                titleLevel="H6"
                number="{model>/PriceAll}"
                numberUnit="EUR">
                <attributes>
                    <ObjectAttribute
                        title="Beschreibung"
                        text="{model>/Description}"/>
                    <ObjectAttribute
                        id="price"
                        title="Einzelpreis"
                        text="{model>/Price} EUR"
                        />
                </attributes>
                </ObjectHeader>
            </l:content>
        </l:HorizontalLayout>
    </content>
    <buttons>
        <Button text="Close" press="onDialogClose" />
    </buttons>
</Dialog>