<c:FragmentDefinition xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <l:VerticalLayout id= "detailLayout">
        <l:content>
            <ObjectHeader
            title="{Name}"
            titleLevel="H3"
            number="{Price}"
            numberUnit="EUR">
            <attributes>
                <ObjectAttribute
                    title="Beschreibung"
                    text="{Description}"/>
                <ObjectAttribute
                    title="VerÃ¶ffentlicht am"
                    text="{path: 'ReleaseDate', formatter: '.formatDate'}"/>
                <ObjectAttribute
                    title="DiscontinuedDate"
                    text="{path: 'DiscontinuedDate', formatter: '.formatDate'}"/>
                <ObjectAttribute
                    title="Kategorie"
                    text="{path: 'Category/Name'}"/>
                <ObjectAttribute
                    title="Lieferant"
                    text="{path: 'Supplier/Name'}"/>

                <!-- <ObjectAttribute
                    title="{i18n>productMeasuresAttributeText}"
                    text="{DimensionWidth} {Unit}, {DimensionDepth} {Unit}, {DimensionHeight} {Unit}"/> -->
            </attributes>
            </ObjectHeader>       
            <RatingIndicator id="rating" maxValue="5" value="{Rating}"/>
            <l:HorizontalLayout id="horzontalLayout">
                <l:content>
                    <Select id="bestellMenge" width="80px" change ="onOrderNumberChanged">
                        <c:ListItem id="1" text="1"></c:ListItem>
                        <c:ListItem id="2" text="2"></c:ListItem>
                        <c:ListItem id="3" text="3"></c:ListItem>
                        <c:ListItem id="4" text="4"></c:ListItem>
                    </Select>
                    <Text id="preis"/>
                </l:content>
            </l:HorizontalLayout>
            <Button id="buttonOrder" text="Jetzt kaufen" icon="sap-icon://customer-order-entry" press="onOrder" width="240px"></Button>
            <Button id="buttonToCart" text="In den Warenkorb" icon="sap-icon://cart-4" press="onCart" width="240px"></Button>
            <!-- <c:Fragment id="detailList" fragmentName= "qst4.view.ProductList" type="XML"/> -->
        </l:content>
    </l:VerticalLayout>
    
</c:FragmentDefinition>